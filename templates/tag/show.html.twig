{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.record_details'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.record_details'|trans }}</h1>

    {% if tag is defined and tag|length %}

    <dl class="dl-horizontal">
        <dt>{{ 'label.id'|trans }}</dt>
        <dd>{{ tag.id }}</dd>
        <dt>{{ 'label.title'|trans }}</dt>
        <dd>{{ tag.title }}</dd>
        <dt>{{ 'label_createdAt'|trans }}</dt>
        <dd>{{ tag.createdAt }}</dd>
        <dt>{{ 'label_updatedAt'|trans }}</dt>
        <dd>{{ tag.updatedAt }}</dd>
    </dl>

    <p>
        <a href="{{ url('tag_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    </p>

    {% else %}
    <p>
        {{ 'message.record_not_found'|trans }}
    </p>
    {% endif %}
{% endblock %}