{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.tag_list'|trans }}
{% endblock %}

{% block body %}
<h1>{{ 'title.tag_list'|trans }}</h1>
    {% if tags is defined and tags|length %}
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'label_id'|trans }}</th>
        <th>{{ 'label_title'|trans }}</th>
        <th>{{ 'label_createdAt'|trans }}</th>
        <th>{{ 'label_updatedAt'|trans }}</th>
    </tr>
    </thead>

    {% for tag in tags %}
        <tr>
            <td>{{ tag.id }}</td>
            <td>{{ tag.title }}</td>
            <td>{{ tag.createdAt|format_date('long') }}</td>
            <td>{{ tag.updatedAt|format_date('long') }}</td>
            <td>
                <a href="{{ url('tag_show', {id: tag.id}) }}" title="{{ 'action_view'|trans }}">
                    {{ 'action_view'|trans }}
                </a>
            </td>
        </tr>
    {% endfor %}
</table>

    {% else %}
    <p>
        {{ 'message.empty_list'|trans }}
    </p>
{% endif %}
{% endblock %}
