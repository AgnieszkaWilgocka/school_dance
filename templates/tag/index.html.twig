{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.tag_list'|trans }}
{% endblock %}

{% block body %}

    <div class="my-classes_header">
        <div class="head-image"></div>
        <h1 class="h-header"><a href="{{ url('main_page') }}">Szkoła Tańca <span>Neon</span></a></h1>
    </div>

    <div class="admin-container">
<h1>{{ 'title.tag_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'label.id'|trans }}</th>
        <th>{{ 'label.title'|trans }}</th>
        <th>{{ 'label.createdAt'|trans }}</th>
        <th>{{ 'label.updatedAt'|trans }}</th>
    </tr>
    </thead>

    {% for tag in pagination.items %}
        <tr>
            <td>{{ tag.id }}</td>
            <td>{{ tag.title }}</td>
            <td>{{ tag.createdAt|format_date('long') }}</td>
            <td>{{ tag.updatedAt|format_date('long') }}</td>
            <td class="admin-td">
                <a href="{{ url('tag_show', {id: tag.id}) }}" title="{{ 'action_view'|trans }}">
                    {{ 'action_view'|trans }}
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ url('tag_create') }}" title="{{ 'action_create'|trans }}">
                    {{ 'action_create'|trans }}
                </a>
                <a href="{{ url('tag_edit', {id: tag.id}) }}" title="{{ 'action_edit'|trans }}">
                    {{ 'action_edit'|trans }}
                </a>
                <a href="{{ url('tag_delete', {id: tag.id}) }}" title="{{ 'action_delete'|trans }}">
                    {{ 'action_delete'|trans }}
                </a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
    <p>
        {{ 'message.empty_list'|trans }}
    </p>
{% endif %}
    </div>
{% endblock %}
