{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.dance_signin'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.dance_edit'|trans }}</h1>
    <p>{{ 'tance'|trans }}</p>
    <div class="invisible">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    </div>
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary">
    </div>

    <div class="form-group row float-sm-left">
        <a href="{{ url('dance_index') }}" class="btn btn-link">
            {{ 'action.back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}